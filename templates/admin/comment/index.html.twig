{% extends 'admin/base.html.twig' %}

{% block title %}Liste des commentaires{% endblock %}

{% block body %}

    <div class="container-fluid">
        <h1 class="h2 mt-5">Administration des commentaires</h1>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Auteur</th>
                    <th>Commentaire</th>
                    <th class="text-center">Note</th>
                    <th>Annonce</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for comment in comments %}
                    <tr>
                        <td>{{comment.id}}</td>
                        <td>{{comment.createdAt|date('d/m/Y H:i')}}</td>
                        <td>
                            <img src="{{comment.author.picture}}" alt="Avatar de {{comment.author.fullName}}" class="avatar avatar-micro mr-2"> 
                            {{comment.author.fullName}}
                        </td>
                        <td>{{comment.content|raw}}</td>
                        <td class="text-center">
                            <badge class="badge badge-dark rounded">{{comment.rating}}</badge>
                        </td>
                        <td>{{comment.ad.title}}</td>
                        <td>
                            <a href="{{ path('admin_comment_edit', {'id': comment.id}) }}" class="btn btn-primary"><i class="fas fa-pen"></i></a>
                            <a href="{{ path('admin_comment_delete', {'id': comment.id}) }}" class="btn btn-danger" onclick="return confirm('Vous allez supprimer dÃ©finitivement un commentaire. Veuillez confirmer.');"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}
